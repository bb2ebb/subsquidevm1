#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../@subsquid/typeorm-migration/bin/squid-typeorm-migration-apply" "$@"
else 
  exec node  "$basedir/../@subsquid/typeorm-migration/bin/squid-typeorm-migration-apply" "$@"
fi
